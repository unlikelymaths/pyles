#:kivy 1.0

#:import linktype_manager linktypes.linktype_manager
#:import ImageWidget widgets.image_widget.ImageWidget
#:import SingleLabel widgets.common.SingleLabel
#:import SingleTextinput widgets.common.SingleTextinput
#:import SingleSpinner widgets.common.SingleSpinner
#:import color widgets.definitions.color

#:set left_column 0.3

<PylesEdit>:
    size_hint_x: 1
    size_hint_y: 1
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: None
        height: 30
        orientation: 'horizontal'

        canvas.before:
            Color:
                rgba: color['secondary-background']
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            size_hint_x: None
            text: 'Back'
            on_press: root.on_back_button()
        Widget:
            size_hint_x: 1
        Button:
            id: save_button
            size_hint_x: None
            text: 'Save'
            on_press: root.on_save_button()
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            SingleLabel:
                text: 'Icon'
            ImageWidget:
                id: image_widget
        BoxLayout:
            orientation: 'vertical'
            GridLayout:
                cols: 2
                size_hint_y: None
                SingleLabel:
                    size_hint_x: left_column
                    text: 'Name'
                SingleTextinput:
                    size_hint_x: 1-left_column
                    id: name_input
                SingleLabel:
                    size_hint_x: left_column
                    text: 'Type'
                SingleSpinner:
                    size_hint_x: 1-left_column
                    id: linktype_selection
                    text: linktype_manager.default.name
                    values: linktype_manager.all.keys()
                    on_text: root.on_linktypename(self.text)
            GridLayout:
                cols: 1
                size_hint_y: None
                id: linktype_settings
            Widget:
                size_hint_y: 1