#:kivy 1.0

#:import ImageWidget widgets.image_widget.ImageWidget
#:import CardWidget widgets.card_widget.CardWidget

<EntryWidget>:
    size_hint_x: None
    size_hint_y: None
    width: 300
    height: 200
    orientation: 'vertical'
    CardWidget:
        size_hint_x: 1
        size_hint_y: 1
        BoxLayout:
            orientation: 'horizontal'
            ImageWidget:
                id: image_widget
                size_hint_x: None
                size_hint_y: None
                width: 160
                height: 160
            Widget:
                size_hint_x: None
                width: 10
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: root.entry.name
                    id: name_input
                    text_size: 100, None
                    size: self.texture_size
                    size_hint_y: None
                Widget:
                    size_hint_y: 1
                BoxLayout:
                    size_hint_y: None
                    height: 20
                    orientation: 'horizontal'
                    Button:
                        text: "Delete"
                        on_press: root.on_delete()