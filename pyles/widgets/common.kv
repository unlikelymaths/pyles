#:kivy 1.0

#:set line_height 30

<SingleLabel@Label>:
    size_hint_y: None
    height: line_height
    text_size: self.size
    halign: 'left'
    
<SingleTextinput@TextInput>:
    size_hint_y: None
    height: line_height
    multiline: False
    
<SingleSpinner@Spinner>:
    size_hint_y: None
    height: line_height
    