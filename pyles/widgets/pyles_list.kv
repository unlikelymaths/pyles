#:kivy 1.0

#:import SingleLabel widgets.common.SingleLabel
#:import color widgets.definitions.color

<PylesList>:
    size_hint_x: 1
    size_hint_y: 1
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: None
        height: 30
        orientation: 'horizontal'

        canvas.before:
            Color:
                rgba: color['secondary-background']
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            size_hint_x: 1
            text: 'Pyles'
        Widget:
            size_hint_x: 2
        Button:
            size_hint_x: 1
            text: 'New'
            on_press: app.set_widget('new')
    ScrollView:
        StackLayout:
            id: entry_widget
            padding: [10,10]
            spacing: [10,10]
            size_hint_x: 1
            size_hint_y: None